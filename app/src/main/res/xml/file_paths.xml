<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- External files directory (app-specific, cleared on uninstall) -->
    <external-files-path
        name="external_files"
        path="." />
    
    <!-- External storage Downloads directory (without trailing slash for better compatibility) -->
    <external-path
        name="external_downloads"
        path="Download" />
    
    <!-- External storage root (covers all external storage paths) -->
    <external-path
        name="external_storage"
        path="." />
    
    <!-- Cache directory for temporary files -->
    <cache-path
        name="cache"
        path="." />
</paths>
